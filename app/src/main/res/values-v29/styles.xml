<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Nasa" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:forceDarkAllowed">true</item>
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="Theme.Nasa.Dark" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="BottomSheetDialog" parent="Animation.Design.BottomSheetDialog">
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="BottomSheetLayout">
        <item name="android:layout_height">340dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@android:color/darker_gray</item>
        <item name="android:orientation">vertical</item>
    </style>
</resources>